{
  "name": "next-lotus-starter",
  "description": "Next.js starter to kickstart my projects.",
  "version": "1.0.0",
  "author": "Lotus <declininglotus@gmail.com>",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "postbuild": "next-sitemap --config next-sitemap.config.js",
    "start": "next start",
    "format:lint": "eslint --fix **/*.{js,jsx,ts,tsx}",
    "format:prettier": "prettier --write **/*.{js,jsx,ts,tsx,css,md,json}",
    "format": "yarn format:lint && yarn format:prettier",
    "algolia": "ts-node --project tsconfig_scripts.json ./scripts/update-algolia.ts",
    "sort": "ts-node --project tsconfig_scripts.json ./scripts/sort-articles.ts && prettier --write **/*.json"
  },
  "dependencies": {
    "@chakra-ui/icons": "^1.0.15",
    "@chakra-ui/react": "^1.6.7",
    "@chakra-ui/theme-tools": "^1.2.0",
    "@emotion/react": "^11.4.1",
    "@emotion/styled": "^11.3.0",
    "@fontsource/inter": "^4.5.0",
    "algoliasearch": "^4.10.5",
    "dotenv": "^10.0.0",
    "framer-motion": "^4.1.17",
    "fs-extra": "^10.0.0",
    "jsonfile": "^6.1.0",
    "next": "^11.1.1",
    "p-queue": "6",
    "puppeteer": "^10.2.0",
    "puppeteer-extra": "^3.1.18",
    "puppeteer-extra-plugin-adblocker": "^2.11.11",
    "puppeteer-extra-plugin-stealth": "^2.7.8",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-icons": "^4.2.0",
    "react-instantsearch-dom": "^6.12.1",
    "sharp": "^0.29.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.12",
    "@types/jsonfile": "^6.0.1",
    "@types/node": "^16.7.8",
    "@types/puppeteer": "^5.4.4",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "eslint": "^7.32.0",
    "eslint-config-next": "^11.1.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "next-sitemap": "^1.6.164",
    "prettier": "^2.3.2",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/DecliningLotus/next-lotus-starter"
